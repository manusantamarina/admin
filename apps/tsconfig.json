{
  "extends": "../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@acme/models": ["../packages/models/src/index.ts"],
      "@acme/interfaces": ["../packages/interfaces/src/index.ts"],
      "@acme/persistence": ["../packages/persistence/src/index.ts"],
      "@acme/services": ["../packages/services/src/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
